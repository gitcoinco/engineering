---
import { Image } from "@astrojs/image/components";
import config from "@config/config.json";
const { src } = Astro.props;
const {
  logo,
  logo_width,
  logo_height,
  logo_text,
  title,
}: {
  logo: string;
  logo_width: any;
  logo_height: any;
  logo_text: string;
  title: string;
} = config.site;
---

<a href="/" class="navbar-brand block">
  {
    src || logo ? (
      <>
        <img
        width={logo_width.replace("px", "") * 2}
        height={logo_height.replace("px", "") * 2}
        src={src ? src : logo}
        alt={title}
        style={{
          height: logo_height.replace("px", "") + "px",
          width: logo_width.replace("px", "") + "px",
          marginRight: "12px",
        }}
      />
      <img
        width={290}
        height={20}
        src={src ? src : logo_text}
        alt={title}
        style={{
          height: "20px",
          width: "290px",
        }}
      />
      </>
    ) : logo_text ? (
      logo_text
    ) : (
      title
    )
  }
</a>
